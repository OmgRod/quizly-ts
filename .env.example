
# =====================
# Quizly .env Template
# =====================

# Database
DATABASE_URL="postgresql://user:pass@db:5432/dbname"
# For local development:
# DATABASE_URL="postgresql://quizly:quizlypass@localhost:5432/quizlydb"

# Session
SESSION_SECRET="your-secret-key-here-change-in-production"
PORT=3001
CLIENT_URL="http://localhost:5173"
NODE_ENV="development"

# =====================
# AI Provider Selection
# =====================
# Set which AI to use for quiz generation:
# Options: gemini, ollama
AI_PROVIDER="gemini"

# --- Gemini (Google) ---
# Required if AI_PROVIDER=gemini
# Get your API key from https://aistudio.google.com/apikey
API_KEY="your-api-key"

# --- Ollama ---
# Required if AI_PROVIDER=ollama
# OLLAMA_BASE_URL="http://localhost:11434"
# OLLAMA_MODEL="llama3.1"

# =====================
# Production Configuration (uncomment and set for production deployment)
# NODE_ENV="production"
# DATABASE_URL="postgresql://user:password@host:port/quizly"
# SESSION_SECRET="generate-a-secure-random-string-in-production"
# PORT=3001
# CLIENT_URL="https://yourdomain.com"
